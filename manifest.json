{
  "manifest_version": 3,
  "name": "Jira Personal Notes",
  "version": "1.1.0",
  "description": "Добавляйте личные заметки к задачам Jira с кастомными статусами",
  "icons": {
    "16": "icons/icons16.svg",
    "48": "icons/icons48.svg",
    "128": "icons/icons128.svg"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.atlassian.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/browse/*",
        "*://*.atlassian.net/jira/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons16.svg",
      "48": "icons/icons48.svg",
      "128": "icons/icons128.svg"
    }
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": [
        "code.json",
        "icons/mac_OS_128px.svg",
        "icons/win_128.svg",
        "icons/win_48.svg",
        "icons/other.svg",
        "templates.html"
      ],
      "matches": ["*://*.atlassian.net/*"]
    }
  ]
}
