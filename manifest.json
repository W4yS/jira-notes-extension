{
  "manifest_version": 3,
  "name": "Jira Personal Notes",
  "version": "1.1.0",
  "description": "Добавляйте личные заметки к задачам Jira с синхронизацией между пользователями",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.atlassian.net/*",
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "https://www.gstatic.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/browse/*",
        "*://*.atlassian.net/jira/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": ["firebase-config.js", "sync-service.js"],
      "matches": ["*://*.atlassian.net/*"]
    }
  ]
}
